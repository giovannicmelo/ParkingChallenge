<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParkingChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aquamarine</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
    </style>

    <style name="ViewPagerTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">82dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/input_text_background</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeErrorColor">@null</item>
        <item name="hintTextColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="PlaceholderStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button" />

    <style name="ButtonStyle.Parking" parent="ButtonStyle">
        <item name="android:layout_height">86dp</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/button_parking_background_color_selector</item>
        <item name="android:textColor">@color/button_parking_text_color_selector</item>
    </style>

    <style name="ButtonStyle.ParkingOut" parent="ButtonStyle">
        <item name="android:layout_height">86dp</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/button_parking_out_background_color_selector</item>
        <item name="android:textColor">@color/button_parking_out_text_color_selector</item>
    </style>

    <style name="ButtonStyle.ParkingOut.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">86dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/button_parking_out_outline_border_color_selector</item>
        <item name="android:textColor">@color/button_parking_out_outline_text_color_selector</item>
    </style>

    <style name="ButtonStyle.ParkingOut.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">86dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>